<header class="d-flex justify-content-between align-items-center header">
  <%= link_to image_tag("https://img.icons8.com/officel/344/back.png"),splashes_hello_path, class: "back_btn" %>
  <h5>Categories</h5>
  <div></div>
</header>
<% if flash[:notice] %>
  <p class="alert alert-primary" role="alert"><%= notice %></p>
<% end %>
<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category %>
    </p>
  <% end %>
</div>
<div class="d-flex justify-content-center fixed-bottom new-btn">
  <%= link_to "New category", new_category_path, class: "" %>
</div>
