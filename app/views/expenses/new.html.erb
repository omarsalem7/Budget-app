<%= form_with model: @expense do |form| %>
  <%= debug @categoryr  %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, in: 1.0..1000.0, step: 0.5 %>
  </div>
  <div>
    <%= form.label :category_id, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400" %>
    <%= form.collection_select :category_id, @categories, :id, :name,:prompt => true  %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
